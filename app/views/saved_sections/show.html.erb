<h1><%= @saved_section.title %></h1>

<div class="mb-3">
  <strong>Descripción:</strong>
  <p style="color: var(--card-text);"><%= simple_format(@saved_section.description) %></p>
</div>

<div class="mb-3 bg-card">
  <strong>Contenido:</strong>
  <div class="p-3 rounded" style="background-color: var(--card-bg); color: var(--card-text);">
    <%= simple_format(@saved_section.content) %>
  </div>
</div>

<div class="mb-3">
  <strong>Nota:</strong>
  <p style="color: var(--card-text);"><%= simple_format(@saved_section.note) %></p>
</div>

<%= link_to "✏️ Editar", edit_saved_section_path(@saved_section), class: "btn btn-outline-primary me-2" %>
<%= link_to "← Volver", saved_sections_path, class: "btn btn-secondary" %>
