<%= form_with(model: saved_section, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Título", class: "form-label", style: "color: var(--color-text);" %>
    <%= f.text_field :title, class: "form-control", required: true, style: "background-color: var(--card-bg); color: var(--card-text);" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Descripción", class: "form-label", style: "color: var(--color-text);" %>
    <%= f.text_area :description, rows: 3, class: "form-control", style: "background-color: var(--card-bg); color: var(--card-text);" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, "Contenido", class: "form-label", style: "color: var(--color-text);" %>
    <%= f.text_area :content, rows: 5, class: "form-control", style: "background-color: var(--card-bg); color: var(--card-text);" %>
  </div>

  <div class="mb-3">
    <%= f.label :note, "Nota Personal", class: "form-label", style: "color: var(--color-text);" %>
    <%= f.text_area :note, rows: 3, class: "form-control", style: "background-color: var(--card-bg); color: var(--card-text);" %>
  </div>

  <%= f.submit saved_section.persisted? ? "Actualizar Sección" : "Guardar Sección", class: "btn btn-primary" %>
<% end %>
