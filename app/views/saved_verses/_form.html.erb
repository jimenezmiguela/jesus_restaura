<%= form_with(model: saved_verse, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :book, "Libro", class: "form-label" %>
    <%= f.text_field :book, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :chapter, "Capítulo", class: "form-label" %>
    <%= f.number_field :chapter, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :verse, "Versículo", class: "form-label" %>
    <%= f.number_field :verse, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :note, "Nota", class: "form-label" %>
    <%= f.text_area :note, rows: 5, class: "form-control" %>
  </div>

  <%= f.submit saved_verse.persisted? ? "Actualizar" : "Guardar", class: "btn btn-primary" %>
<% end %>
