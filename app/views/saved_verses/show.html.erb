<h1>Versículo Guardado</h1>

<ul class="list-group mb-4 bg-card" style="color: var(--card-text); border-color: var(--table-border);">
  <li class="list-group-item" style="background-color: var(--card-bg); color: var(--card-text);">
    <strong>Libro:</strong> <%= @saved_verse.book.titleize %>
  </li>
  <li class="list-group-item" style="background-color: var(--card-bg); color: var(--card-text);">
    <strong>Capítulo:</strong> <%= @saved_verse.chapter %>
  </li>
  <li class="list-group-item" style="background-color: var(--card-bg); color: var(--card-text);">
    <strong>Versículo:</strong> <%= @saved_verse.verse %>
  </li>
  <li class="list-group-item" style="background-color: var(--card-bg); color: var(--card-text);">
    <strong>Nota:</strong> <%= simple_format(@saved_verse.note.presence || "Sin nota") %>
  </li>
</ul>

<div class="d-flex">
  <%= link_to "✏️ Editar", edit_saved_verse_path(@saved_verse), class: "btn btn-outline-primary me-2" %>
  <%= link_to "← Volver", saved_verses_path, class: "btn btn-secondary" %>
</div>
