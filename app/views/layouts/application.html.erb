<!DOCTYPE html>
<html lang="es" data-theme="light"> <!-- default light here -->
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>JesusRestaura.com</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Persisted theme (runs BEFORE CSS to prevent flash) -->
  <script>
    try {
      const savedTheme = localStorage.getItem("theme");
      if (savedTheme === "dark") {
        document.documentElement.dataset.theme = "dark";
      } else {
        document.documentElement.dataset.theme = "light";
      }
    } catch(e) {
      document.documentElement.dataset.theme = "light";
    }
  </script>

  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    crossorigin="anonymous"
  >

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show">
      <%= value %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <!-- Navbar -->
  <nav class="navbar navbar-dark">
    <div class="container d-flex justify-content-between align-items-center">

      <a class="navbar-brand fw-bold text-white" href="/">JesusRestaura.com</a>

      <div class="d-flex align-items-center">
        <!-- Theme Toggle -->
        <label class="theme-toggle me-3" data-controller="theme">
          <input
            type="checkbox"
            data-theme-target="toggle"
            data-action="theme#toggle"
          >
          <span data-theme-target="icon" aria-hidden="true">ðŸŒ™</span>
        </label>

        <% if user_signed_in? %>
          <span class="text-white me-2">Hola, <%= current_user.email %></span>
          <%= link_to "Editar cuenta", edit_user_registration_path,
              class: "btn btn-outline-light btn-sm me-2" %>
          <%= button_to "Cerrar sesiÃ³n", destroy_user_session_path,
              method: :delete, class: "btn btn-outline-light btn-sm" %>

        <% elsif admin_signed_in? %>
          <span class="text-white me-2">Admin: <%= current_admin.email %></span>
          <%= button_to "Cerrar sesiÃ³n (admin)", destroy_admin_session_path,
              method: :delete, class: "btn btn-outline-light btn-sm" %>

        <% else %>
          <%= link_to "Iniciar sesiÃ³n", new_user_session_path,
              class: "btn btn-outline-light btn-sm me-2" %>
          <%= link_to "Registrarse", new_user_registration_path,
              class: "btn btn-outline-light btn-sm" %>
        <% end %>
      </div>
    </div>
  </nav>

  <!-- Main -->
  <main class="container py-5">
    <%= yield %>
  </main>

  <!-- Footer -->
  <footer class="text-center my-5">
    <small>&copy; <%= Time.current.year %> JesusRestaura.com</small>
  </footer>

  <!-- Bootstrap JS (CDN) -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous">
  </script>
</body>
</html>
