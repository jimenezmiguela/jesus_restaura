<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "correo-electrónico" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> mínimo de caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "nueva-contraseña" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nueva-contraseña" %>
  </div>

  <%= invisible_captcha %>

  <div class="actions">
    <%= f.submit "Inscribirse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
