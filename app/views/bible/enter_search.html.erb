<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-md-6 col-sm-10">

      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h2 class="text-warning fw-bold mb-2">
            <%= session[:book].to_s.capitalize.presence || "Libro" %>
          </h2>

          <h5 class="mb-4">
            Ingresa una Búsqueda <span class="opacity-75">(ejemplo: fe)</span>
          </h5>

          <%= form_with url: bible_show_search_path, method: :post,
                local: true, data: { turbo: false } do %>
            <div class="mb-3">
              <%= text_field_tag :search_term, nil,
                class: "form-control",
                placeholder: "ejemplo: fe",
                autofocus: true %>
            </div>

            <%= submit_tag "Encontrar Búsqueda",
              class: "btn btn-warning w-100 fw-bold text-dark" %>
          <% end %>
        </div>
      </div>

      <% if @error.present? %>
        <div class="alert alert-danger mt-4 text-center">
          <%= @error %>
        </div>
      <% elsif @search_results.present? %>
        <div class="card border-warning mt-4">
          <div class="card-header bg-warning fw-bold text-dark">
            Resultados de “<%= @search_term %>” en
            <%= session[:book].to_s.capitalize %>
          </div>
          <div class="card-body card-body-results">
            <% @search_results.each do |verse| %>
              <% highlighted =
                verse.gsub(
                  /(#{Regexp.escape(@search_term)})/i,
                  '<span class="highlight-blue">\1</span>'
                ).html_safe %>
              <p><%= highlighted %></p>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
