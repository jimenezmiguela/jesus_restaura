<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-md-6 col-sm-10">

      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h2 class="text-warning fw-bold mb-2">
            <%= session[:book].to_s.capitalize.presence || "Libro" %>
          </h2>

          <h5 class="mb-4">
            Ingresa un Vers√≠culo <span class="opacity-75">(ejemplo: 3:16)</span>
          </h5>

          <%= form_with url: bible_show_verse_path, method: :post, local: true do %>
            <div class="mb-3">
              <%= text_field_tag :reference, nil,
                class: "form-control",
                placeholder: "ejemplo: 3:16",
                autofocus: true %>
            </div>

            <%= submit_tag "Encontrar Vers√≠culo",
              class: "btn btn-warning w-100 fw-bold text-dark" %>
          <% end %>
        </div>
      </div>

      <% if @error.present? %>
        <div class="alert alert-danger mt-4 text-center">
          <%= @error %>
        </div>

      <% elsif @verse.present? %>
        <div class="card border-warning mt-4">
          <div class="card-header bg-warning fw-bold text-dark">
            Resultado de b√∫squeda:
            <%= session[:book].to_s.capitalize %> <%= @reference %>
          </div>

          <div class="card-body card-body-results">
            <pre class="mb-0" style="white-space: pre-wrap;">
<%= @verse %>
            </pre>
          </div>
        </div>

        <% if user_signed_in? %>
          <div class="mt-3 text-center">
            <%= form_with model: SavedVerse.new, local: true do |f| %>
              <%= f.hidden_field :book, value: session[:book] %>
              <%= f.hidden_field :chapter, value: @reference.split(":").first %>
              <%= f.hidden_field :verse, value: @reference.split(":").last %>

              <%= f.submit "üìå Guardar Vers√≠culo",
                class: "btn btn-outline-success mt-2" %>
            <% end %>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
