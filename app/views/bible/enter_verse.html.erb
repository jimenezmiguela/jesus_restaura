<h1>Jesus Restaura<h1>
<div class="text-center mb-4">
  <h2 style="color: #ff6b00;"><%= session[:book].to_s.capitalize %></h2>
  <h4 class="text-muted">Ingresa un Versículo (ejemplo: 3:16)</h4>
</div>

<%= form_with url: bible_show_verse_path, method: :post, local: true, html: { class: "mb-4" } do %>
  <div class="input-group">
    <%= text_field_tag :reference, nil, class: "form-control", placeholder: "ejemplo: 3:16", autofocus: true %>
    <button type="submit" class="btn btn-warning text-white">Encontrar Versículo</button>
  </div>
<% end %>

<div id="verse_result">
  <% if @error.present? %>
    <div class="alert alert-danger" role="alert">
      <%= @error %>
    </div>
  <% elsif @verse.present? %>
    <div class="card border-warning mt-4">
      <div class="card-header bg-warning text-white fw-bold">
        Resultado de búsqueda: <%= session[:book].to_s.capitalize %> <%= @reference %>
      </div>
      <div class="card-body" style="background-color: #fff7e6;">
        <pre class="mb-0" style="white-space: pre-wrap;"><%= @verse %></pre>
      </div>
    </div>
  <% end %>
</div>
