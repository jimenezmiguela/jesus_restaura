<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 col-sm-10">

      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h2 class="text-warning fw-bold mb-2">
            <%= session[:book].to_s.capitalize.presence || "Libro" %>
          </h2>

          <h5 class="mb-4">Búsqueda por:</h5>

          <%= form_with url: bible_set_category_path, method: :post, local: true do %>

            <div class="form-check text-start mb-3">
              <%= radio_button_tag :category, "find_chapter",
                session[:category] == "find_chapter",
                class: "form-check-input",
                id: "find_chapter" %>
              <%= label_tag "find_chapter", "Capítulo", class: "form-check-label" %>
            </div>

            <div class="form-check text-start mb-3">
              <%= radio_button_tag :category, "find_verse",
                session[:category] == "find_verse",
                class: "form-check-input",
                id: "find_verse" %>
              <%= label_tag "find_verse", "Versículo", class: "form-check-label" %>
            </div>

            <div class="form-check text-start mb-3">
              <%= radio_button_tag :category, "find_range",
                session[:category] == "find_range",
                class: "form-check-input",
                id: "find_range" %>
              <%= label_tag "find_range", "Rango de Versos", class: "form-check-label" %>
            </div>

            <div class="form-check text-start mb-4">
              <%= radio_button_tag :category, "find_search",
                session[:category] == "find_search",
                class: "form-check-input",
                id: "find_search" %>
              <%= label_tag "find_search", "Palabra Específica", class: "form-check-label" %>
            </div>

            <%= submit_tag "Continuar",
              class: "btn btn-warning w-100 fw-bold text-dark" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
