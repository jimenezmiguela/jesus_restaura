<div class="text-center mb-4">
  <h2 style="color: #ff6b00;"><%= session[:book].to_s.capitalize %></h2>
  <h4 class="text-muted">Ingresa un Capítulo (ejemplo: 3)</h4>
</div>

<%= form_with url: bible_show_chapter_path, method: :post, local: true, html: { class: "mb-4" } do %>
  <div class="input-group">
    <%= text_field_tag :chapter, nil, class: "form-control", placeholder: "ejemplo: 3", autofocus: true %>
    <button type="submit" class="btn btn-warning text-white">Encontrar Capítulo</button>
  </div>
<% end %>

<% if @error.present? %>
  <div class="alert alert-danger mt-3" role="alert">
    <%= @error %>
  </div>
<% elsif @chapter.present? %>
  <div class="card border-warning mt-4">
    <div class="card-header bg-warning text-white fw-bold">
      Resultado: <%= session[:book].to_s.capitalize %> Capítulo <%= @chapter_number %>
    </div>
    <div class="card-body" style="background-color: #fff7e6;">
      <% @chapter.each_with_index do |verse, i| %>
        <p><strong><%= i + 1 %></strong> <%= verse %></p>
      <% end %>
    </div>
  </div>
<% end %>
