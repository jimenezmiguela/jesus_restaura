<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-md-6 col-sm-10">

      <div class="card shadow-sm">
        <div class="card-body text-center">

          <h2 class="text-warning fw-bold mb-2">
            <%= session[:book].to_s.capitalize.presence || "Libro" %>
          </h2>

          <h5 class="mb-4">
            Ingresa un Cap√≠tulo (ejemplo: 3)
          </h5>

          <!-- üîπ Fix: disable Turbo to force full page reload so controller vars render -->
          <%= form_with url: bible_show_chapter_path, method: :post, local: true, data: { turbo: false } do %>
            <div class="input-group mb-3">
              <%= text_field_tag :chapter, nil,
                class: "form-control",
                placeholder: "ejemplo: 3",
                autofocus: true %>
            </div>

            <%= submit_tag "Encontrar Cap√≠tulo",
              class: "btn btn-warning w-100 fw-bold text-dark" %>
          <% end %>

        </div>
      </div>

      <% if @error.present? %>
        <div class="alert alert-danger mt-4 text-center" role="alert">
          <%= @error %>
        </div>

      <% elsif @chapter.present? %>
        <div class="card border-warning mt-4">

          <div class="card-header bg-warning fw-bold text-dark">
            Resultado de b√∫squeda:
            <%= session[:book].to_s.capitalize %> <%= @chapter_number %>
          </div>

          <div class="card-body card-body-results">
            <% @chapter.each_with_index do |verse, i| %>
              <p>
                <strong><%= i + 1 %></strong>
                <%= verse %>
              </p>
            <% end %>
          </div>

        </div>
      <% end %>

    </div>
  </div>
</div>
