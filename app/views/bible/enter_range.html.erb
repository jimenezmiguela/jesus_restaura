<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-md-6 col-sm-10">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h2 class="text-warning fw-bold mb-2">
            <%= session[:book].to_s.capitalize.presence || "Libro" %>
          </h2>

          <h5 class="text-muted mb-4">
            Ingresa Vers√≠culos de comenzar y terminar
          </h5>

          <%= form_with url: bible_show_range_path, method: :post, local: true do %>
            <div class="mb-3">
              <%= text_field_tag :starting_verse, nil, class: "form-control", placeholder: "Comenzar ejemplo: 3:16", autofocus: true %>
              <p></p>
              <%= text_field_tag :ending_verse, nil, class: "form-control", placeholder: "Terminar ejemplo: 3:19" %>
            </div>

            <%= submit_tag "Encontrar Rango de Versos", class: "btn btn-warning w-100 text-white fw-bold" %>
          <% end %>
        </div>
      </div>

      <% if @error.present? %>
        <div class="alert alert-danger mt-4 text-center" role="alert">
          <%= @error %>
        </div>

      <% elsif @range.present? %>
        <div class="card border-warning mt-4">
          <div class="card-header bg-warning text-white fw-bold">
            Resultado de b√∫squeda: <%= session[:book].to_s.capitalize %> <%= @starting_verse %> a <%= @ending_verse %>
          </div>
          <div class="card-body" style="background-color: #fff7e6;">
            <pre class="mb-0" style="white-space: pre-wrap;"><%= @range %></pre>
          </div>
        </div>

        <% if user_signed_in? %>
          <div class="mt-3 text-center">
            <%= form_with model: SavedSection.new, url: saved_sections_path, method: :post, local: true do |f| %>
              <%= f.hidden_field :title, value: "#{session[:book].to_s.capitalize} #{@starting_verse}‚Äì#{@ending_verse}" %>
              <%= f.hidden_field :description, value: "Secci√≥n seleccionada desde la Biblia" %>
              <%= f.hidden_field :content, value: @range %>

              <div class="mb-3">
                <%= f.label :note, "Nota Personal (opcional)", class: "form-label" %>
                <%= f.text_area :note, rows: 3, class: "form-control" %>
              </div>

              <%= f.submit "üìå Guardar Secci√≥n", class: "btn btn-outline-success mt-2" %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
