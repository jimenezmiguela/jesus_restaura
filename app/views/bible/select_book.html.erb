<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6 col-sm-10">

      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h2 class="text-warning fw-bold mb-2">Biblia</h2>
          <h5 class="mb-4">Selecciona un Libro de la Biblia</h5>

          <%= form_with url: bible_set_book_path, method: :post, local: true do %>
            <div class="mb-3">
              <%= select_tag :book,
                options_for_select(@books.map { |b| [b.capitalize, b] }),
                class: "form-select" %>
            </div>

            <%= submit_tag "Continuar",
              class: "btn btn-warning w-100 fw-bold text-dark" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
